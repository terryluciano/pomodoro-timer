{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ESNext",
        "jsx": "preserve",
        "checkJs": true,
        "strict": true,
        "types": ["vite/client"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "src/**/*.vue", "src/**/*.js"],
    "exclude": ["node_modules", "dist"]
}
